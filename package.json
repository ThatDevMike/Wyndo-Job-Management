{
  "name": "wyndo",
  "version": "1.0.0",
  "private": true,
  "description": "Wyndo - Job management software that outperforms Tradify and Squeegee",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "npm run dev:api",
    "dev:api": "cd services/api && npm run dev",
    "build": "cd services/api && npm run build",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:push": "cd packages/database && npx prisma db push",
    "db:studio": "cd packages/database && npx prisma studio",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
